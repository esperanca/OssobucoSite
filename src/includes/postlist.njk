<ol class="postlist" reversed>
{% for post in collections.posts | reverse %}
    <li>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        <time datetime="{{ post.date | readableDate('dd LLL yyyy)}}">
            ({{ post.date | dateToFormat(meta.dateFormat) }})
        </time>
    </li>
{% endfor %}
</ol>
